{% extends 'temp.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <body class="account-page">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8 offset-md-2">

                    <div class="account-content">
                        <div class="row align-items-center justify-content-center">
                            <div class="col-md-7 col-lg-6 login-left">
                                <img src="{{ asset('assets/logo.png') }}" class="img-fluid" alt="Doccure Register">
                            </div>
                            <div class="col-md-12 col-lg-6 login-right">
                                
                                {{ form_start(registrationForm, {attr: {'novalidate': 'novalidate'}}) }}
                                <div class="form-group form-focus">
                                    {{ form_widget(registrationForm.email,{attr:{'class':'form-control floating'}}) }}
                                    <label class="focus-label">Nom</label>
                                </div>
                                <div class="form-group form-focus">
                                    {{ form_widget(registrationForm.plainPassword,{attr:{'class':'form-control floating'}}) }}
                                    <label class="focus-label">Nom</label>
                                </div>

                               

                                
                                <div class="text-end">
                                    <a class="forgot-link" href="####">Vous avez déjà un compte?</a>
                                </div>

 <button type="submit" class="btn">Register</button>                               
{{ form_end(registrationForm) }}
                                <div class="row form-row social-login">
                                    <div class="col-6">
                                        <a href="#" class="btn btn-facebook w-100"><i class="fab fa-facebook-f me-1"></i> Se connecter</a>
                                    </div>
                                    <div class="col-6">
                                        <a href="#" class="btn btn-google w-100"><i class="fab fa-google me-1"></i> Se connecter</a>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    </body>
{% endblock %}